<ul class="pager">
    #if(pager.currentPage > 1) {
    <li class="previous"><a href="?pn=#(pager.currentPage-1)">&larr; 上一页</a></li>
    }

    <li class="number">#(pager.currentPage)/#(pager.totalPage)</li>
    #if(pager.currentPage < pager.totalPage) {
    <li class="next"><a href="?pn=#(pager.currentPage+1)">下一页 &rarr;</a></li>
    }
</ul>